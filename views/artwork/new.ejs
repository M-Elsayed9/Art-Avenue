<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Artwork</h1>
  <div class="col-6 offset-3">
    <form action="/artwork" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="product[title]"
          required
        />
        <!-- <div class="valid-feeback">looks good!</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="user">Artist</label>
        <input
          class="form-control"
          type="text"
          id="user"
          name="product[user]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="product[image]"
          required
        />
        <!-- <div class="valid-feeback">looks good!</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="category">Category</label>
        <input
          class="form-control"
          type="text"
          id="category"
          name="product[category]"
          required
        />
        <!-- <div class="valid-feeback">looks good!</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="product[description]"
          required
        ></textarea>
        <!-- <div class="valid-feeback">looks good!</div> -->
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Artwork</button>
      </div>
    </form>
  </div>
</div>

